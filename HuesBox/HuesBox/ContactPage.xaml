<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuesBox.ContactPage">
    <ContentPage.Content>
        <StackLayout Spacing="10" Margin="20">
            <Entry x:Name="EntryName" Placeholder="Name" ></Entry>
            <Entry x:Name="EntryEmail" Placeholder="Email" ></Entry>
            <Label Text="Body" FontSize="18"></Label>
            <Editor x:Name="EntryBody" Text="" VerticalOptions="FillAndExpand"></Editor>
            <Button x:Name="EmailButton" Clicked="EmailButton_Clicked" Text="Send Email" HorizontalOptions="End" VerticalOptions="End"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>